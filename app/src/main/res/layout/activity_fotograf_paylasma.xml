<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/statusBarColor"
    tools:context=".FotografPaylasmaActivity">

    <ImageView
        android:id="@+id/imageView3"
        android:onClick="gorselSec"
        android:layout_width="288dp"
        android:layout_height="178dp"
        android:layout_marginStart="59dp"
        android:layout_marginTop="52dp"
        android:layout_marginEnd="59dp"
        android:layout_marginBottom="55dp"
        android:background="@android:color/system_accent1_500"
        app:layout_constraintBottom_toTopOf="@+id/yorumtext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/mine2" />

    <EditText
        android:id="@+id/yorumtext"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="54dp"
        android:layout_marginBottom="73dp"
        android:background="@color/white"
        android:ems="10"
        android:hint="Yorum"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/sharebut"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3" />

    <Button
        android:id="@+id/sharebut"
        android:onClick="paylas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="153dp"
        android:backgroundTint="#E83F0A"
        android:text="PaylaÅŸ"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yorumtext" />
</androidx.constraintlayout.widget.ConstraintLayout>